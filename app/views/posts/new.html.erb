<!--Adding labels to adding a new post page -->

<h1> New Post </h1>

<%= form_with :model => @post do |form| %>

<p>
  <%= form.label "Post Title" %>
  <%= form.text_field "title" %>
</p>

<p>
  <%= form.label "What did you do?" %>
  <%= form.text_field "description" %>
</p>

  <p>
    <%= form.label "date" %>
    <%= form.date_field "posted_on" %>
  </p>
  
  <p>
    <%= form.hidden_field "place_id" %>
  </p>
  
  <%= form.submit%>
<% end %>